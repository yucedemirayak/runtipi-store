{
  "services": [
    {
      "name": "nextcloud",
      "image": "nextcloud:29-apache",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "POSTGRES_HOST",
          "value": "postgres"
        },
        {
          "key": "POSTGRES_DB",
          "value": "nextcloud"
        },
        {
          "key": "POSTGRES_USER",
          "value": "postgres"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "postgres"
        },
        {
          "key": "NEXTCLOUD_ADMIN_USER",
          "value": "${TIPI_NEXTCLOUD_ADMIN_USER:-admin}"
        },
        {
          "key": "NEXTCLOUD_ADMIN_PASSWORD",
          "value": "${TIPI_NEXTCLOUD_ADMIN_PASSWORD:-change-me-now}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/www/html"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
