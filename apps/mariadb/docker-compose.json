{
  "services": [
    {
      "name": "mariadb",
      "image": "mariadb:11.4",
      "isMain": true,
      "internalPort": 3306,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "MARIADB_ROOT_PASSWORD",
          "value": "${TIPI_MARIADB_ROOT_PASSWORD}"
        },
        {
          "key": "MARIADB_DATABASE",
          "value": "${TIPI_MARIADB_DATABASE}"
        },
        {
          "key": "MARIADB_USER",
          "value": "${TIPI_MARIADB_USER}"
        },
        {
          "key": "MARIADB_PASSWORD",
          "value": "${TIPI_MARIADB_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/lib/mysql"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
