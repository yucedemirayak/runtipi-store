{
  "services": [
    {
      "name": "redis",
      "image": "redis:7.4-alpine",
      "isMain": true,
      "internalPort": 6379,
      "command": "sh -c \"redis-server --appendonly yes --save 60 1 --requirepass ${TIPI_REDIS_PASSWORD}\"",
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
