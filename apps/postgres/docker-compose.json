{
  "services": [
    {
      "name": "postgres",
      "image": "postgres:17-alpine",
      "isMain": true,
      "internalPort": 5432,
      "environment": [
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "POSTGRES_USER",
          "value": "${POSTGRES_USER}"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${POSTGRES_PASSWORD}"
        },
        {
          "key": "POSTGRES_DB",
          "value": "${POSTGRES_DB}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ],
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json"
}
