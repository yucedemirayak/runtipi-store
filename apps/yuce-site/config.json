{
  "$schema": "../app-info-schema.json",
  "name": "Yuce Site",
  "id": "yuce-site",
  "available": true,
  "short_desc": "Self-updating web app from Git webhook",
  "author": "yucedemirayak",
  "port": 4000,
  "categories": ["development", "utilities"],
  "description": "Clones your repo, builds with pnpm, serves on port 3000 and rebuilds on signed GitHub webhooks.",
  "tipi_version": 1,
  "version": "node-20-alpine",
  "source": "https://github.com/yucedemirayak/yucedemirayak.com-next",
  "website": "https://yucedemirayak.com",
  "exposable": true,
  "dynamic_config": true,
  "form_fields": [
    {
      "type": "password",
      "label": "GitHub Token",
      "min": 1,
      "max": 255,
      "required": true,
      "env_variable": "TIPI_YUCE_SITE_GITHUB_TOKEN",
      "default": ""
    },
    {
      "type": "password",
      "label": "Webhook Secret",
      "min": 8,
      "max": 255,
      "required": true,
      "env_variable": "TIPI_YUCE_SITE_WEBHOOK_SECRET",
      "default": ""
    },
    {
      "type": "text",
      "label": "Repository URL",
      "required": false,
      "env_variable": "TIPI_YUCE_SITE_REPO_URL",
      "default": "https://github.com/yucedemirayak/yucedemirayak.com-next.git"
    },
    {
      "type": "text",
      "label": "Repository Branch",
      "required": false,
      "env_variable": "TIPI_YUCE_SITE_REPO_BRANCH",
      "default": "master"
    },
    {
      "type": "text",
      "label": "Node Environment",
      "required": false,
      "env_variable": "TIPI_YUCE_SITE_NODE_ENV",
      "default": "production"
    },
    {
      "type": "text",
      "label": "Start Command",
      "required": false,
      "env_variable": "TIPI_YUCE_SITE_START_CMD",
      "default": "pnpm start"
    }
  ],
  "supported_architectures": ["amd64", "arm64"],
  "created_at": 1770753600000,
  "updated_at": 1770753600000,
  "min_tipi_version": "4.5.0"
}
